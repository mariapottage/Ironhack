<h2> <%=product.name %> </h2>

<img src="<%= product.imageUrl %>" width="100%">

<h3>Price: <span>$<%= product.price %></span></h3>

<p><%= product.description %></p>

<!-- CREATE A HORIZONTAL LINE: -->
<hr>

<h3> User Reviews </h3>

<ul>
  <% product.reviews.forEach((oneReview) => { %>
  <li>
  <p> <%= oneReview.content %> </p>
  <p> <%=oneReview.stars %> ⭐️ out of 5 ⭐️ </p>
  <strong> <%= oneReview.author %> </strong>
</li>
  <% }) %>
</ul>
<a href="/products/<%= product._id %>/reviews/new">
  Review This product
</a>
<br>

<a href="/products/<%= product._id %>/edit">
  Edit
</a>
<br>

<form method="post" action="/products/<%=product._id %>/delete">
  <button> Delete </button>
</form>
